<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brandon.hearus" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.brandon.hearus.MainActivity"
            android:label="@string/main_activity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.brandon.hearus.BillListActivity"
            android:label="@string/bill_list_activity" >
        </activity>
        <activity
            android:name="com.brandon.hearus.BillActivity"
            android:label="@string/title_activity_bill" >
        </activity>
        <activity
            android:name="com.brandon.hearus.LocationActivity"
            android:label="@string/title_activity_location" >
        </activity>
    </application>

</manifest>
