<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brandon.hearus.CongressmenFragment">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_gravity="center">

		<TextView
			android:id="@+id/congress_member_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="10dp"
			android:text="First Last"/>

		<TextView
			android:id="@+id/congress_member_address_label"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="10dp"
			android:text="Members Office Address"/>
		<TextView
			android:id="@+id/congress_member_address"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="10dp"
			android:text="123 Penn ave"/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:id="@+id/congress_member_contact_number_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingRight="10dp"
				android:paddingBottom="10dp"
				android:text="Contact Number"/>

			<TextView
				android:id="@+id/congress_member_contact_number"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/congress_member_contact_number_label"
				android:paddingRight="10dp"
				android:text="555 - 555 - 5555"/>

			<TextView
				android:id="@+id/congress_member_contact_form_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="10dp"
				android:layout_toRightOf="@id/congress_member_contact_number_label"
				android:text="Contact Form"/>


			<TextView
				android:id="@+id/congress_member_contact_form"
				android:layout_below="@id/congress_member_contact_form_label"
				android:layout_toRightOf="@id/congress_member_contact_number"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="www.website.com"/>
			</RelativeLayout>
		</LinearLayout>


</FrameLayout>
